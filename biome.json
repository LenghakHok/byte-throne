{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "includes": [
      "!dist/**",
      "!.astro/**",
      "!node_modules/**",
      "!npm-debug.log*",
      "!yarn-debug.log*",
      "!yarn-error.log*",
      "!pnpm-debug.log*",
      "!.DS_Store",
      "!.idea/**",
      "!.turbo/**",
      "!.vercel/**"
    ]
  },
  "formatter": {
    "attributePosition": "multiline",
    "bracketSpacing": true,
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "html": {
    "formatter": {
      "attributePosition": "multiline",
      "bracketSameLine": true,
      "enabled": true,
      "indentScriptAndStyle": true,
      "whitespaceSensitivity": "strict"
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "semicolons": "always"
    },
    "jsxRuntime": "reactClassic",
    "linter": {
      "enabled": true
    }
  },
  "linter": {
    "domains": {
      "react": "recommended"
    },
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "recommended": true,
        "useImportExtensions": "off"
      },
      "nursery": {
        "noProcessEnv": "off",
        "noSecrets": "off",
        "recommended": true,
        "useComponentExportOnlyModules": "off",
        "useConsistentCurlyBraces": {
          "fix": "safe",
          "level": "error"
        },
        "useExplicitType": "off",
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "attributes": ["className"],
            "functions": ["cn", "cva"]
          }
        }
      },
      "performance": {
        "noBarrelFile": "off",
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "style": {
        "noDefaultExport": "off",
        "noNamespaceImport": "off",
        "noParameterAssign": "warn",
        "noParameterProperties": "off",
        "recommended": true,
        "useExplicitLengthCheck": "off",
        "useFilenamingConvention": "off",
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noExplicitAny": "off",
        "noReactSpecificProps": "off",
        "recommended": true
      }
    }
  },
  "vcs": { "clientKind": "git", "enabled": true, "useIgnoreFile": true }
}
